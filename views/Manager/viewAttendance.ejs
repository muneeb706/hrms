                </ul>
            </div><!-- /#sidebar-wrapper -->
            <!-- Page Content -->
            <div id="page-content-wrapper">
                <div class="container-fluid xyz">
                    <div class="row">
                        <div class="col-lg-12">
                            <!--<h1><label id="name">Muneeb Jutt</label></h1>
                    <h4><label id="email">M@gmail.com</label></h4>-->
                            <br>
                            <div style="height:600px; overflow: auto">
                                <% if (found===1){ %>
                                    <table id="example" class="display" cellspacing="0"
                                        style="height: 10%; overflow: auto;">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Status</th>

                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Date</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            <% attendance.forEach(function(item){ %>

                                                <tr>
                                                    <td>
                                                        <%= moment(item.month + "/" + item.date + "/" +
                                                            item.year).format('MMMM Do YYYY'); %>
                                                    </td>
                                                    <td>Present</td>

                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                    <% }else{ %>
                                        <p> Unable to find attendance for given month and year</p>
                                        <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /#page-content-wrapper -->


        </div>
        <!-- /#wrapper -->
        <!-- jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.js" charset="UTF-8"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.js" charset="UTF-8"></script>
        <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
        <script src="/javascripts/sidebar_menu.js"></script>
        <script>
            $(document).ready(function () {

                $('#example').DataTable();
                // Setup - add a text input to each footer cell
                $('#example tfoot th').each(function () {
                    var title = $(this).text();
                    if (title != " ") {
                        $(this).html('<input type="text" class="form-control" placeholder="Search ' + title + '" />');
                    }
                });
                for (i = new Date().getFullYear(); i > 1900; i--) {
                    $('#year').append($('<option />').val(i).html(i));
                }

                var table = $('#example').DataTable();

                // Apply the search
                table.columns().every(function () {
                    var that = this;

                    $('input', this.footer()).on('keyup change', function () {
                        if (that.search() !== this.value) {
                            that
                                .search(this.value)
                                .draw();
                        }
                    });
                });
                
                // Fix active menu state on all modals
                // This script runs after sidebar_menu.js and fixes the active state issues
                // Maintain correct active item 
                $('#menu li').removeClass('active');
                $('#menu li:eq(4)').addClass('active'); // View Attendance is active
                
                // Remove all click handlers from menu items with modal triggers
                $('a[onclick*="modal"]').off('click');
                
                // Fix modals messing with active states
                $('.modal').on('show.bs.modal hide.bs.modal', function (e) {
                    // Force View Attendance to remain active regardless of modal state
                    setTimeout(function() {
                        $('#menu li').removeClass('active');
                        $('#menu li:eq(4)').addClass('active');
                    }, 50);
                });
            });
        </script>
    </body>

    <div id="myModal2" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <form method="post" action="/manager/mark-manager-attendance">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Mark Attendance</h4>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to mark attendance.</p>
                    </div>
                    <div class="modal-footer">

                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="reset" class="btn btn-default" data-dismiss="modal">No</button>
                        <button type="submit" class="btn btn-default">Yes</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <form method="post" action="/manager/view-attendance">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Select Month/Year</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="Month">Month:</label>
                            <select class="form-control" id="month" name="month">
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="year">Year:</label>
                            <select class="form-control" id="year" name="year">
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="reset" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-default">View</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

</html>